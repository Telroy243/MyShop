<SubscriptionScreen>:
    name: "subscription"

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(15)

        Label:
            text: "Gestion de l'abonnement"
            font_size: '20sp'
            bold: True
            size_hint_y: None
            height: dp(40)
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)

            Label:
                text: "Android ID :"
                size_hint_x: 0.3
                valign: 'middle'
                halign: 'left'
                text_size: self.size

            TextInput:
                id: android_id_input
                text: root.android_id
                readonly: True
                size_hint_x: 0.7
                font_size: '14sp'
                multiline: False
                background_color: 0.95,0.95,0.95,1

        Button:
            text: "Copier l'Android ID"
            size_hint_y: None
            height: dp(40)
            on_release: root.copier_android_id()

        TextInput:
            id: code_licence_input
            hint_text: "Entrez votre code de licence"
            multiline: False
            size_hint_y: None
            height: dp(40)
            font_size: '14sp'

        Button:
            text: "Valider la licence"
            size_hint_y: None
            height: dp(40)
            on_release: root.valider_licence()

        Widget:
            size_hint_y: 1

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(5)
            spacing: dp(10)

            Button:
                text: "Contacter lâ€™Administrateur"
                on_release: root.contacter_admin()
                opacity: 1 if root.licence_expiree else 0
                disabled: not root.licence_expiree
